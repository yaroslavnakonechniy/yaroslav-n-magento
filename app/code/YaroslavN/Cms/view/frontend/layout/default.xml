<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      layout="1column"
>
    <body>
        <move element="yaroslav.n.c.m.s.text.block" destination="page.wrapper" before="-" />
        <referenceContainer name="content">
            <container name="yaroslav.n.c.m.s.container" htmlTag="div" htmlClass="yaroslav-n-cms">
                <block name="yaroslav.n.c.m.s.text.block"
                       class="Magento\Framework\View\Element\Text"
                       before="-"
                >
                    <arguments>
                        <argument name="text" translate="true" xsi:type="string"><![CDATA[This is a demo store by YaroslavN for {DV.Campus}. Orders will not be accepted!]]></argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
