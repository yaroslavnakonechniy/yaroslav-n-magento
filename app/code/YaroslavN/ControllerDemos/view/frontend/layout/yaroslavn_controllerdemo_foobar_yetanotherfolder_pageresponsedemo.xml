<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      layout="1column"
>
    <body>
        <referenceContainer name="content">
            <container name="yaroslav.n.controller.demos.container" htmlTag="div" htmlClass="yaroslav-n-controller-demo">
                <block name="yaroslav.n.controller.demos.text.block"
                       class="Magento\Framework\View\Element\Text"
                       before="-"
                >
                    <arguments>
                        <argument name="text" translate="true" xsi:type="string"><![CDATA[Html page controller PageResponseDemo]]></argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Template"
                       name="yaroslav.n.controller.demos.text.block.with.template"
                       template="YaroslavN_ControllerDemos::demo.phtml"
                >
                    <arguments>
                        <argument name="url_parameter_redirectresponsedemo" xsi:type="url" path="yaroslav-n-controller-demo/foobar_yetanotherfolder/redirectresponsedemo"/>
                        <argument name="url_parameter_pagejsonresponsedemo" xsi:type="url" path="yaroslav-n-controller-demo/foobar_yetanotherfolder/pagejsonresponsedemo"/>
                        <argument name="url_parameter_forwardresponsedemo" xsi:type="url" path="yaroslav-n-controller-demo/foobar_yetanotherfolder/forwardresponsedemo"/>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
