<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="content">
            <block class="YaroslavN\RegularCustomer\Block\Product\View\DiscountRequest"
                   name="ya.roslavn.personal.discount.form"
                   template="YaroslavN_RegularCustomer::catalog/product/view/discount/personal_discount_request.phtml"
                   before="product.info.details"
            >
                <block class="Magento\Cms\Block\BlockByIdentifier"
                       name="yaroslavn.text.cms.block">
                    <arguments>
                        <argument name="identifier" xsi:type="string">title_block</argument>
                    </arguments>
                </block>
                <block class="Magento\Cms\Block\BlockByIdentifier"
                       name="yaroslavn.text.after.title.cms.block">
                    <arguments>
                        <argument name="identifier" xsi:type="string">block_between_the_title_and_the_form</argument>
                    </arguments>
                </block>
                <arguments>
                    <argument name="cache_lifetime" xsi:type="number">84600</argument>
                    <argument name="request_submit_url"
                              path="yaroslavn_personal_discount/index/request"
                              xsi:type="url"
                    />
                    <argument name="product"
                              helper="Magento\Catalog\Helper\Data::getProduct"
                              xsi:type="helper"
                    />
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
