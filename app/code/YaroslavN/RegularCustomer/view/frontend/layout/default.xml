<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.components">
            <block class="Magento\Framework\View\Element\Js\Components" name="sales_page_head_components" template="Magento_Sales::js/components.phtml"/>
        </referenceBlock>
        <referenceContainer name="sidebar.additional">
            <block class="Magento\Sales\Block\Reorder\Sidebar" name="sale.reorder.sidebar" as="reorder" template="Magento_Sales::reorder/sidebar.phtml"/>
        </referenceContainer>
        <referenceBlock name="footer_links">
            <block class="Magento\Sales\Block\Guest\Link" name="sales-guest-form-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Links on Request</argument>
                    <argument name="path" xsi:type="string">yaroslav-n-regular-customer/request/form</argument>
                </arguments>
            </block>
            <referenceBlock name="top.links">
                <block class="Magento\Framework\View\Element\Html\Link" name="custom-top-link">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">Links on Personal Discount</argument>
                        <argument name="path" xsi:type="string">yaroslav-n-regular-customer/requests/view</argument>
                    </arguments>
                </block>
            </referenceBlock>
        </referenceBlock>
    </body>
</page>
